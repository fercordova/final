<h1>Musicians Guide</h1>

<div class = "row mt-3 mb-3">
    <div class = "col">
        <a href ="/event/new" class="btn btn-outline-primary">New Venue</a>
    </div>
</div>
<% for event in @events %>
    <div class = "row">
        <div class = "col">
            <div class = "eventname">
                <h3><a href="/events/<%= event[:id]%>"><%=event[:event_name]%></a></h3>
            </div>
        </div>
    </div>
    <div class = "row">
        <div class = "col-md-4">
            <% if @rsvps_table.where(event_id: event[:id]).avg(:overall_rating) == nil %>
                <p>No Reviews Yet</p>
            <% else %>
                <p>Overall: <%=(@rsvps_table.where(event_id: event[:id]).avg(:overall_rating)).round(2)%>/5
                <% if @rsvps_table.where(event_id: event[:id]).avg(:overall_rating) >= 3.5%>
                    <i class="fas fa-smile"></i>
                <% elsif @rsvps_table.where(event_id: event[:id]).avg(:overall_rating) >= 2.5 %>
                    <i class="fas fa-meh"></i>
                <% else %>
                    <i class="fas fa-frown"></i>
                <% end %>
                </p>
            <% end %>
        </div>
        <div class = "col-md-4"
            <p>Booking Email: <%=event[:email]%></p>
        </div>
        <div class = "col-md-4"
            <p>Website: <a href="<%=event[:website]%>"><%=event[:website]%></a></p>
        </div>
    </div>

<% end %>